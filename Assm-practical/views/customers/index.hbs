{{#extends "base"}}
{{#block "content"}}
<h1>Customers</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Rating</th>
        <th>Company</th>
        <th>Action</th>
    </tr>
    {{#each customers}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{rating}}</td>
        <td>{{name}}</td>
  
        <td>
            <a href="/customers/{{customer_id}}/edit">Edit</a>
            <a href="/customers/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>

    </tr>
    

    {{/each}}


    <td><a href="/customers/create">New Customer</a></td>


</table>
{{/block}}
{{/extends}}

