{{#extends "base"}}
{{#block "title"}}Customers{{/block}}
{{#block "content"}}
<h1>Customers</h1>
<table class="table">
    <tr style="cursor: pointer">
        <th onclick="sortTable('firstName')">First Name</th>
        <th onclick="sortTable('lastName')">Last Name</th>
        <th>Rating</th>
        <th>Company</th>
        <th>Employee Name</th>
        <th>Action</th>
    </tr>
    {{#each customers}}
    <tr>
        <td>{{Customers.first_name}}</td>
        <td>{{Customers.last_name}}</td>
        <td>{{Customers.rating}}</td>
        <td>{{Companies.name}}</td>
        <td>{{employee_names}}</td>  
        <td>
            <a href="/customers/{{Customers.customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
            <a href="/customers/{{Customers.customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>

    </tr>

    {{/each}}

</table>



<br>

<td><a href="/customers/create" class="btn-link">Add New Customer</a></td>

{{/block}}
{{/extends}}

