{{#extends "base"}}

{{#block "title"}}Create New Customer{{/block}}

{{#block "content"}}
<h1>Add a New Customer</h1>
<form method="POST">
    <div class="mb-3">
        <label>First Name</label>
        <input type="text" class="form-control" name="first_name" required>
    </div>
    <div class="mb-3">
        <label>Last Name</label>
        <input type="text" class="form-control" name="last_name" required>
    </div>
    <div class="mb-3">
        <label>Rating</label>
        <input type="text" class="form-control" name="rating" required>
    </div>
    <div class="mb-3">
        <label>Company</label>
        <select name="company_id" class="form-control">
            {{#each companies}}
            <option value="{{company_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
   
    <div class="mb-3">
        <label>Employees</label>
        <select name="employee_id" class="form-control" multiple required>
            {{#each employees}}
            <option value="{{employee_id}}">{{first_name}} {{last_name}}</option>
            {{/each}}
        </select>
    </div>

     <button type="submit" class="btn btn-primary">Add Customer</button>

    

</form>
{{/block}}
{{/extends}}